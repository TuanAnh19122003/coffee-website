<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle : 'Detail Order' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="mb-0">Order Detail</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Order ID:</dt>
                            <dd class="col-sm-9"><%= orderDetail.order.id %></dd>

                            <dt class="col-sm-3">Customer Name:</dt>
                            <dd class="col-sm-9"><%= orderDetail.order.user.lastName %> <%= orderDetail.order.user.firstName %></dd>

                            <dt class="col-sm-3">Phone:</dt>
                            <dd class="col-sm-9"><%= orderDetail.order.user.phone %></dd>

                            <dt class="col-sm-3">Address:</dt>
                            <dd class="col-sm-9"><%= orderDetail.order.address %></dd>

                            <dt class="col-sm-3">Product:</dt>
                            <dd class="col-sm-9"><%= orderDetail.product.name %></dd>

                            <dt class="col-sm-3">Size:</dt>
                            <dd class="col-sm-9"><%= orderDetail.size %></dd>

                            <dt class="col-sm-3">Price:</dt>
                            <dd class="col-sm-9"><%= orderDetail.price %></dd>

                            <dt class="col-sm-3">Quantity:</dt>
                            <dd class="col-sm-9"><%= orderDetail.num %></dd>

                            <dt class="col-sm-3">Total:</dt>
                            <dd class="col-sm-9"><%= orderDetail.totalPrice %></dd>
                        </dl>

                        <div class="d-flex justify-content-start mt-3">
                            <a href="/order-details/<%= orderDetail.id %>/edit" class="btn btn-outline-warning btn-sm me-1">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>
                            <a href="/order-details/<%= orderDetail.id %>/delete" class="btn btn-outline-danger btn-sm me-1" onclick="return confirm('Are you sure you want to delete this order detail?');">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
</body>
</html>
