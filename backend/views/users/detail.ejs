<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle : 'Detail User' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="mb-0">Details</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">ID:</dt>
                            <dd class="col-sm-9"><%= user.id %></dd>
                            <dt class="col-sm-3">Profile Image:</dt>
                            <dd class="col-sm-9">
                                <img src="<%= user.image ? user.image : '/path/to/default-image.jpg' %>" alt="User Image" style="max-width: 100px; height: auto;">
                            </dd>
                            <dt class="col-sm-3">Name:</dt>
                            <dd class="col-sm-9"><%= user.lastName %> <%= user.firstName %></dd>
                            <dt class="col-sm-3">Email:</dt>
                            <dd class="col-sm-9"><%= user.email %></dd>
                            <dt class="col-sm-3">Password:</dt>
                            <dd class="col-sm-9"><%= user.password %></dd>
                            <dt class="col-sm-3">Phone:</dt>
                            <dd class="col-sm-9"><%= user.phone %></dd>
                            <dt class="col-sm-3">Address:</dt>
                            <dd class="col-sm-9"><%= user.address %></dd>
                            <dt class="col-sm-3">Role:</dt>
                            <dd class="col-sm-9"><%= user.role ? user.role.name : 'No role assigned' %></dd>
                            
                        </dl>
                        <div class="d-flex justify-content-start mt-3">
                            <a href="/users/<%= user.id %>/edit" class="btn btn-outline-warning btn-sm me-1">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>
                            <a href="/users/<%= user.id %>/delete" class="btn btn-outline-danger btn-sm me-1" onclick="return confirm('Are you sure you want to delete this user?');">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </div>
                        
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
</body>
</html>
