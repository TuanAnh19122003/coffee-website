<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', {pageTitle: 'User List'}) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Users List</h1>
                        <a href="/users/create" class="btn btn-primary shadow-sm">
                            <i class="fa-solid fa-circle-plus"></i> New
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Image</th>
                                        <th>fullName</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                        <th>Role</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((user, index) => { %>
                                        <tr>
                                            <!-- <td><%= user.id %></td> -->
                                            <td><%= index + 1 %> </td>
                                            <td>
                                                <% if(user.image){ %>
                                                    <img src="<%= user.image %>" class="img-fluid img-thumbnail" alt="User Image" style="width: 110px; height: 110px;">
                                                <% } else{ %>
                                                    <span>No Image</span>
                                                <% } %>
                                            </td>
                                            <td><%= user.lastName %> <%= user.firstName %></td>
                                            <td><%= user.email %></td>
                                            <td><%= user.phone %></td>
                                            <td><%= user.address %></td>
                                            <td><%= user.role ? user.role.name : 'No Role' %></td>
                                            <td class="text-center">
                                                <a href="/users/<%= user.id %>/edit" class="btn btn-outline-warning btn-sm me-1">
                                                    <i class="fa-solid fa-pen-to-square"></i> Edit
                                                </a>
                                                <a href="/users/<%= user.id %>/delete" class="btn btn-outline-danger btn-sm me-1" onclick="return confirm('Bạn có chắc muốn xóa người dùng này?');">
                                                    <i class="fa-solid fa-trash"></i> Delete
                                                </a>
                                                <a href="/users/<%= user.id %>/detail" class="btn btn-outline-info btn-sm">
                                                    <i class="fa-solid fa-circle-info"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
    
    <!-- tail -->
    <%- include('../layout/tail.ejs') %>
</body>
</html>
