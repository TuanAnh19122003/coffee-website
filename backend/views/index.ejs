<!DOCTYPE html>
<html lang="en">
    <%- include('layout/head.ejs', {pageTitle: 'Admin Management'}) %>
<body>
    <div id="wrapper">
        <%- include('layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Admin Dashboard</h1>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Category Management -->
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card shadow-sm">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Category Management</h5>
                                        <p class="card-text">Manage all product categories.</p>
                                        <a href="/categories" class="btn btn-primary">Go to Categories</a>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Product Management -->
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card shadow-sm">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Product Management</h5>
                                        <p class="card-text">Manage all available products.</p>
                                        <a href="/products" class="btn btn-success">Go to Products</a>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Order Management -->
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card shadow-sm">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Order Management</h5>
                                        <p class="card-text">Manage customer orders.</p>
                                        <a href="/orders" class="btn btn-warning">Go to Orders</a>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- User Management -->
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card shadow-sm">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">User Management</h5>
                                        <p class="card-text">Manage registered users.</p>
                                        <a href="/users" class="btn btn-info">Go to Users</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('layout/footer.ejs') %>
        </div>
    </div>
    
    <!-- tail -->
    <%- include('layout/tail.ejs') %>
</body>
</html>
