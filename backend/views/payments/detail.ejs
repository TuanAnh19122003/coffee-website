<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle : 'Detail Payment' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="mb-0">Payment Details</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Payment ID:</dt>
                            <dd class="col-sm-9"><%= payment.id %></dd>

                            <dt class="col-sm-3">Payment Method:</dt>
                            <dd class="col-sm-9"><%= payment.paymentMethod %></dd>

                            <dt class="col-sm-3">transactionId:</dt>
                            <dd class="col-sm-9"><%= payment.transactionId %></dd>

                            <dt class="col-sm-3">Payment Status:</dt>
                            <dd class="col-sm-9"><%= payment.paymentStatus === 1 ? 'Đã thanh toán' : 'Chưa thanh toán' %></dd>

                            <dt class="col-sm-3">Order ID:</dt>
                            <dd class="col-sm-9"><%= payment.order.id %></dd>
                        </dl>

                        <div class="d-flex justify-content-start mt-3">
                            <a href="/payments/<%= payment.id %>/edit" class="btn btn-outline-warning btn-sm me-1">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>
                            <a href="/payments/<%= payment.id %>/delete" class="btn btn-outline-danger btn-sm me-1" onclick="return confirm('Are you sure you want to delete this payment?');">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </div>
                        
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
</body>
</html>
