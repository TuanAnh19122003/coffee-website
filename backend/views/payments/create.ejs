<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle: 'Create Payment' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Create</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <form action="/payments/create" method="post">

                                <div class="mb-3">
                                    <label for="paymentMethod" class="form-label">Payment Method:</label>
                                    <input type="text" class="form-control" id="paymentMethod" name="paymentMethod" placeholder="Enter Last Payment Method" required>
                                </div>

                                <div class="mb-3">
                                    <label for="transactionId" class="form-label">transactionId:</label>
                                    <textarea type="number" class="form-control" id="transactionId" name="transactionId" placeholder="Enter transactionId"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label for="paymentStatus" class="form-label">Payment Status:</label>
                                    <input type="number" class="form-control" id="paymentStatus" name="paymentStatus" placeholder="Enter paymentStatus">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="user" class="form-label">order:</label>
                                    <select class="form-select" id="orderId" name="orderId" required>
                                        <option value="" disabled selected> Select a order </option>
                                        <% orders.forEach(order => { %>
                                            <option value="<%= order.id %>"><%= order.id %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-success">Create</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>

    <!-- tail -->
    <%- include('../layout/tail.ejs') %>
</body>
</html>
