<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle : 'Edit Feedback' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="mb-0">Edit</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <form action="/feedbacks/<%= feedback.id %>/edit" method="post">
                            <div class="mb-3">
                                <label for="firstName" class="form-label">First Name:</label>
                                <input type="text" class="form-control" value="<%= feedback.firstName %>" id="firstName" name="firstName" placeholder="Enter first Name" required>
                            </div>

                            <div class="mb-3">
                                <label for="lastName" class="form-label">Last Name:</label>
                                <input type="text" class="form-control" value="<%= feedback.lastName %>" id="lastName" name="lastName" placeholder="Enter Last Name" required>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Email:</label>
                                <input type="email" class="form-control" value="<%= feedback.email %>" id="email" name="email" placeholder="Enter email" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="phoneNumber" class="form-label">Phone:</label>
                                <input type="text" class="form-control" value="<%= feedback.phoneNumber %>" id="phoneNumber" name="phoneNumber" placeholder="Enter phone Number" required>
                            </div>

                            <div class="mb-3">
                                <label for="subjectName" class="form-label">subject Name:</label>
                                <input type="text" class="form-control" value="<%= feedback.subjectName %>" id="subjectName" name="subjectName" placeholder="Enter subject Name" required>
                            </div>

                            <div class="mb-3">
                                <label for="note" class="form-label">Note:</label>
                                <textarea class="form-control" id="note" name="note" rows="5" placeholder="Enter note"><%= feedback.note %></textarea>
                            </div>
        
                            <div class="mb-3">
                                <button type="submit" class="btn btn-warning">Save Changes</button>
                            </div>
        
                        </form>
                        
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
    
</body>
</html>