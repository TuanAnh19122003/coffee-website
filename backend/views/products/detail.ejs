<!DOCTYPE html>
<html lang="en">
<%- include('../layout/head.ejs', { pageTitle : 'Detail product' }) %>

    <body>
        <div id="wrapper">
            <%- include('../layout/sidebar.ejs') %>
                <div id="content-wrapper" class="d-flex flex-column">
                    <!-- Main Content -->
                    <div id="content">
                        <!-- navbar.ejs -->
                        <%- include('../layout/navbar.ejs') %>
                            <div class="card mt-2" style="margin: 10px;">
                                <div class="card-header d-flex align-items-center justify-content-between mb-4">
                                    <h1 class="mb-0">Details</h1>
                                    <a class="btn btn-secondary" onclick="window.history.back();">
                                        <i class="fa fa-arrow-left"></i> Back
                                    </a>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-3">ID:</dt>
                                        <dd class="col-sm-9">
                                            <%= product.id %>
                                        </dd>
                                        <dt class="col-sm-3">Profile Image:</dt>
                                        <dd class="col-sm-9">
                                            <img src="<%= product.image ? product.image : '/uploads/default-image.jpg' %>"
                                                alt="product Image" style="max-width: 100px; height: auto;">
                                        </dd>
                                        <dt class="col-sm-3">Name:</dt>
                                        <dd class="col-sm-9">
                                            <%= product.name %>
                                        </dd>
                                        <dt class="col-sm-3">Discount:</dt>
                                        <dd class="col-sm-9">
                                            <%= product.discount %>
                                        </dd>
                                        <dt class="col-sm-3">Description:</dt>
                                        <dd class="col-sm-9">
                                            <%= product.description %>
                                        </dd>
                                        

                                        <dt class="col-sm-3">Created At:</dt>
                                        <dd class="col-sm-9">
                                            <%= product.createdAt %>
                                        </dd>
                                        <dt class="col-sm-3">Updated At:</dt>
                                        <dd class="col-sm-9">
                                            <%= product.updatedAt %>
                                        </dd>
                                        <dt class="col-sm-3">Category:</dt>
                                        <dd class="col-sm-9">
                                            <%= product.category ? product.category.name : 'No category assigned' %>
                                        </dd>

                                    </dl>
                                    <div class="d-flex justify-content-start mt-3">
                                        <a href="/products/<%= product.id %>/edit"
                                            class="btn btn-outline-warning btn-sm me-1">
                                            <i class="fa-solid fa-pen-to-square"></i> Edit
                                        </a>
                                        <a href="/products/<%= product.id %>/delete"
                                            class="btn btn-outline-danger btn-sm me-1"
                                            onclick="return confirm('Are you sure you want to delete this product?');">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </a>
                                    </div>

                                </div>
                            </div>
                    </div>
                    <!-- Footer -->
                    <%- include('../layout/footer.ejs') %>
                </div>
        </div>
    </body>

</html>