<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle: 'Create Product' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Create</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <form action="/products/create" method="post" enctype="multipart/form-data">

                                <div class="mb-3">
                                    <label for="name" class="form-label">Name:</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter Last Name" required>
                                </div>

                                <div class="mb-3">
                                    <label for="discount" class="form-label">Discount:</label>
                                    <input type="number" class="form-control" id="discount" name="discount" placeholder="Enter discount" required>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Description:</label>
                                    <input type="description" class="form-control" id="description" name="description" placeholder="Enter description">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="image" class="form-label">Upload Image:</label>
                                    <input type="file" class="form-control" name="image" />
                                </div>
                                
                                <div class="mb-3">
                                    <label for="category" class="form-label">Category:</label>
                                    <select class="form-select" id="category" name="category" required>
                                        <option value="" disabled selected> Select a Category </option>
                                        <% categories.forEach(category => { %>
                                            <option value="<%= category.id %>"><%= category.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-success">Create</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>

    <!-- tail -->
    <%- include('../layout/tail.ejs') %>
</body>
</html>
