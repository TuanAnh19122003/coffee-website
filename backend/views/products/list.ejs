<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', {pageTitle: 'Product Management'}) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Products List</h1>
                        <a href="/products/create" class="btn btn-primary shadow-sm">
                            <i class="fa-solid fa-circle-plus"></i> New
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Created At</th>
                                        <th>Updated At</th>
                                        <th>Category</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach((product, index) => { %>
                                        <tr>
                                            <!-- <td><%= product.id %></td> -->
                                            <td><%= index + 1 %> </td>
                                            <td>
                                                <% if(product.image){ %>
                                                    <img src="<%= product.image %>" class="img-fluid img-thumbnail" alt="product Image" style="width: 110px; height: 110px;">
                                                <% } else{ %>
                                                    <span>No Image</span>
                                                <% } %>
                                            </td>
                                            <td><%= product.name %></td>
                                            <td><%= product.createdAt %></td>
                                            <td><%= product.updatedAt %></td>
                                            <td><%= product.category ? product.category.name : 'No Category' %></td>
                                            <td class="text-center">
                                                <a href="/products/<%= product.id %>/edit" class="btn btn-outline-warning btn-sm me-1">
                                                    <i class="fa-solid fa-pen-to-square"></i> Edit
                                                </a>
                                                <a href="/products/<%= product.id %>/delete" class="btn btn-outline-danger btn-sm me-1" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                                    <i class="fa-solid fa-trash"></i> Delete
                                                </a>
                                                <a href="/products/<%= product.id %>/detail" class="btn btn-outline-info btn-sm">
                                                    <i class="fa-solid fa-circle-info"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                    <!-- pagination -->
                    <%- include('../layout/pagination.ejs') %>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
    
    <!-- tail -->
    <%- include('../layout/tail.ejs') %>
</body>
</html>
