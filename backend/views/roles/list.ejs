<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', {pageTitle: 'Role List'}) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Role List</h1>
                        <a href="/roles/create" class="btn btn-primary shadow-sm">
                            <i class="fa-solid fa-circle-plus"></i> New
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th style="width: 20%;">Name</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% roles.forEach(role => { %>
                                        <tr>
                                            <td><%= role.id %></td>
                                            <td><%= role.name %></td>
                                            <td class="text-center">
                                                <a href="/roles/<%= role.id %>/edit" class="btn btn-outline-warning btn-sm me-1">
                                                    <i class="fa-solid fa-pen-to-square"></i> Edit
                                                </a>
                                                <a href="/roles/<%= role.id %>/delete" class="btn btn-outline-danger btn-sm me-1" onclick="return confirm('Bạn có chắc muốn xóa quyền này?');">
                                                    <i class="fa-solid fa-trash"></i> Delete
                                                </a>
                                                <a href="/roles/<%= role.id %>/detail" class="btn btn-outline-info btn-sm">
                                                    <i class="fa-solid fa-circle-info"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
    
    <!-- tail -->
    <%- include('../layout/tail.ejs') %>
</body>
</html>
