<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle : 'Edit Role' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="mb-0">Edit</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <form action="/roles/<%= role.id %>/edit" method="post">
                    
                            <div class="form-group">
                                <label for="name" class="form-label">Name: </label>
                                <input type="text" class="form-control" id="name" name="name" value="<%= role.name %>" required>
                            </div>
        
                            <div class="mb-3">
                                <button type="submit" class="btn btn-warning">Save Changes</button>
                            </div>
        
                        </form>
                        
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
    
</body>
</html>