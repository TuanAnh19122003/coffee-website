<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle : 'Edit Order' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="mb-0">Edit</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <form action="/orders/<%= order.id %>/edit" method="post">

                            <div class="mb-3">
                                <label for="user" class="form-label">User:</label>
                                <select class="form-select" name="userId" id="userId">
                                    <option value="" disabled selected> Select a User </option>
                                    <% users.forEach(user =>{ %>
                                        <option value="<%= user.id %>" <%= order.user && order.user.id === user.id ? 'selected' : '' %>>
                                            <%= user.lastName %> <%= user.firstName %>
                                        </option>                                        
                                    <% }) %>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="address" class="form-label">Address:</label>
                                <input type="text" class="form-control" id="address" value="<%= order.address %>" name="address" placeholder="Enter first Name" required>
                            </div>

                            <div class="mb-3">
                                <label for="note" class="form-label">Note:</label>
                                <textarea type="text" class="form-control" id="note" name="note" placeholder="Enter Last Name"><%= order.note %></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="total" class="form-label">Total:</label>
                                <input type="number" class="form-control" id="total" value="<%= order.total %>" name="total" placeholder="Enter Last Name" required>
                            </div>

                            <div class="mb-3">
                                <label for="status" class="form-label">Status:</label>
                                <select class="form-select" name="status" id="status">
                                    <% Object.keys(OrderStatus).forEach(key => { %>
                                        <option value="<%= OrderStatus[key] %>" <%= order.status === OrderStatus[key] ? 'selected' : '' %>>
                                            <%= OrderStatus[key] %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            
        
                            <div class="mb-3">
                                <button type="submit" class="btn btn-warning">Save Changes</button>
                            </div>
        
                        </form>
                        
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
    
</body>
</html>