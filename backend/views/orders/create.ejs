<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle: 'Create Order' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Create</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <form action="/orders/create" method="post">

                                <div class="mb-3">
                                    <label for="name" class="form-label">Address:</label>
                                    <input type="text" class="form-control" id="address" name="address" placeholder="Enter Last address" required>
                                </div>

                                <div class="mb-3">
                                    <label for="note" class="form-label">Note:</label>
                                    <textarea type="number" class="form-control" id="note" name="note" placeholder="Enter note"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label for="total" class="form-label">Total:</label>
                                    <input type="number" class="form-control" id="total" name="total" placeholder="Enter total">
                                </div>
                                
                                
                                <div class="mb-3">
                                    <label for="user" class="form-label">user:</label>
                                    <select class="form-select" id="userId" name="userId" required>
                                        <option value="" disabled selected> Select a user </option>
                                        <% users.forEach(user => { %>
                                            <option value="<%= user.id %>"><%= user.lastName %> <%= user.firstName %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-success">Create</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>

    <!-- tail -->
    <%- include('../layout/tail.ejs') %>
</body>
</html>
