<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', {pageTitle: 'Order Management'}) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">orders List</h1>
                        <a href="/orders/create" class="btn btn-primary shadow-sm">
                            <i class="fa-solid fa-circle-plus"></i> New
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>ID</th>
                                        <th>Full Name</th>
                                        <th>Phone</th>
                                        <th>Total</th>
                                        <th>Address</th>
                                        <th>Order date</th>
                                        <th>Status</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach((order, index) => { %>
                                        <tr>
                                            <td><%= (currentPage - 1) * itemsPerPage + index + 1 %></td>
                                            <td><%= order.id %></td>
                                            <td>
                                                <%= order.user.lastName %> <%= order.user.firstName %>
                                            </td>
                                            <td><%= order.user.phone %></td>
                                            <td><%= order.total %></td>
                                            <td><%= order.address %></td>
                                            <td><%= order.order_date %></td>
                                            <td><%= order.status %></td>
                                            <td class="text-center">
                                                <a href="/orders/<%= order.id %>/edit" class="btn btn-outline-warning btn-sm me-1">
                                                    <i class="fa-solid fa-pen-to-square"></i> Edit
                                                </a>
                                                <a href="/orders/<%= order.id %>/delete" class="btn btn-outline-danger btn-sm me-1" onclick="return confirm('Bạn có chắc muốn xóa người dùng này?');">
                                                    <i class="fa-solid fa-trash"></i> Delete
                                                </a>
                                                <a href="/orders/<%= order.id %>/detail" class="btn btn-outline-info btn-sm">
                                                    <i class="fa-solid fa-circle-info"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                    <!-- pagination -->
                    <%- include('../layout/pagination.ejs') %>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
    
    <!-- tail -->
    <%- include('../layout/tail.ejs') %>
</body>
</html>
