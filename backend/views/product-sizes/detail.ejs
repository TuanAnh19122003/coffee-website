<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle : 'Detail Product Size' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="mb-0">Details</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">ID:</dt>
                            <dd class="col-sm-9"><%= product_size.id %></dd>

                            <dt class="col-sm-3">Size:</dt>
                            <dd class="col-sm-9"><%= product_size.size %></dd>

                            <dt class="col-sm-3">Price:</dt>
                            <dd class="col-sm-9"><%= product_size.price %></dd>

                            <dt class="col-sm-3">Product:</dt>
                            <dd class="col-sm-9"><%= product_size.product ? product_size.product.name : 'No product assigned' %></dd>
                            
                        </dl>
                        <div class="d-flex justify-content-start mt-3">
                            <a href="/product-sizes/<%= product_size.id %>/edit" class="btn btn-outline-warning btn-sm me-1">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>
                            <a href="/product-sizes/<%= product_size.id %>/delete" class="btn btn-outline-danger btn-sm me-1" onclick="return confirm('Are you sure you want to delete this product_size?');">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </div>
                        
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
</body>
</html>
