<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle : 'Edit Product Size' }) %>
<body>
    <div id="wrapper">
        <%- include('../layout/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- navbar.ejs -->
                <%- include('../layout/navbar.ejs') %>
                <div class="card mt-2" style="margin: 10px;">
                    <div class="card-header d-flex align-items-center justify-content-between mb-4">
                        <h1 class="mb-0">Edit</h1>
                        <a class="btn btn-secondary" onclick="window.history.back();">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                    </div>
                    <div class="card-body">
                        <form action="/product-sizes/<%= product_size.id %>/edit" method="post">
                            <div class="mb-3">
                                <label for="size" class="form-label">Size:</label>
                                <input type="text" class="form-control" id="size" value="<%= product_size.size %>" name="size" placeholder="Enter first Name" required>
                            </div>

                            <div class="mb-3">
                                <label for="price" class="form-label">Price:</label>
                                <input type="number" class="form-control" id="price" value="<%= product_size.price %>" name="price" placeholder="Enter Last Name" required>
                            </div>

                            <div class="mb-3">
                                <label for="product" class="form-label">Product:</label>
                                <select class="form-select" name="productId" id="productId">
                                    <option value="" disabled selected> Select a Product </option>
                                    <% products.forEach(product =>{ %>
                                        <option value="<%= product.id %>" <%= product_size.product && product_size.product.id === product.id ? 'selected' : '' %>>
                                            <%= product.name %>
                                        </option>                                        
                                    <% }) %>
                                </select>
                            </div>
        
                            <div class="mb-3">
                                <button type="submit" class="btn btn-warning">Save Changes</button>
                            </div>
        
                        </form>
                        
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../layout/footer.ejs') %>
        </div>
    </div>
    
</body>
</html>